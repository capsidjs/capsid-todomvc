{
  "name": "capsid-todomvc",
  "version": "1.0.0",
  "description": "todomvc by capsid",
  "main": "index.html",
  "scripts": {
    "start": "static .",
    "test": "run-s unit-test e2e",
    "unit-test": "karma start",
    "e2e": "run-p -r start todomvc-test",
    "todomvc-test": "todomvc-test http://localhost:8080",
    "lint": "standard",
    "fix": "standard --fix",
    "dist": "browserify -t babelify src/index.js > dist/app.js",
    "check": "npm run dist && open index.html",
    "codecov": "npm run test && codecov",
    "open-cov": "open coverage/Chrome*/lcov-report/index.html"
  },
  "repository": "https://github.com/capsidjs/todomvc.git",
  "keywords": [
    "todomvc",
    "capsid"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-decorators-legacy": "^1.0.0",
    "babel-preset-es2015": "^6.13.0",
    "babelify": "^8.0.0",
    "browserify": "^14.4.0",
    "capsid": "^0.19.0",
    "chai": "^4.1.0",
    "codecov": "^3.0.0",
    "hash-route": "^1.1.1",
    "karma": "^2.0.0",
    "karma-browserify": "^5.0.5",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.0.0",
    "karma-coveralls": "^1.1.2",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "mocha": "^4.0.0",
    "node-static": "^0.7.10",
    "npm-run-all": "^4.1.1",
    "standard": "^10.0.2",
    "todomvc-app-css": "^2.0.6",
    "todomvc-common": "^1.0.2",
    "todomvc-test": "^1.0.2",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "decorators-legacy"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "browser",
      "mocha"
    ],
    "globals": [
      "$"
    ],
    "ignore": [
      "dist"
    ]
  }
}
